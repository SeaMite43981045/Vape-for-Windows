<Window x:Class="Vape_for_Windows.ui.ClickGui.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vape_for_Windows.ui.ClickGui" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="180" Background="Transparent" Foreground="Transparent" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStyle="None">

    <Grid>
        <Border x:Name="mainBorder" Background="#FF141414" CornerRadius="7" BorderBrush="Transparent">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" />
            </Border.Effect>
        </Border>

        <Grid Height="25" VerticalAlignment="Top" >
            <Image Height="25" VerticalAlignment="Top" Source="..\..\assets\vape.jpg" HorizontalAlignment="Left"/>
        </Grid>

        <Grid Height="25" VerticalAlignment="Top" Margin="0, 25, 0, 0" Background="#FF1A191A">
            <TextBlock Foreground="#FFA2A2A2" Text="System" VerticalAlignment="Center" Margin="30,0,0,0"></TextBlock>
        </Grid>
    </Grid>
</Window>