<Window x:Class="Vape_for_Windows.ui.Click"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vape_for_Windows.ui"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Height="1440" Width="3440"
        ResizeMode="NoResize" Topmost="True" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="#FF1A191A"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Height" Value="41.5"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="ClickMode" Value="Press"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF1F1E1F"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="Transparent">
        <Grid Name="ClickGuiMenu_Grid"
              Margin="100,100,0,0"
              Background="Transparent" 
              Height="505" Width="220"
              HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border Name="ClickGuiMenuBorder"
                    Background="#FF141414" BorderBrush="Transparent"
                    CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0"/>
                </Border.Effect>
            </Border>

            <Grid Name="ClickGuiMenuTitle"
                  Margin="0,3,0,0"
                  Height="34"
                  Background="#FF141414"
                  AllowDrop="True"
                  VerticalAlignment="Top">
                <Image Name="ClickGuiMenuTitle_Icon"                       
                       Source="..\Assets\vape.png" 
                       Height="14" Margin="14,0,0,0"
                       VerticalAlignment="Center" HorizontalAlignment="Left" />
                <iconPacks:PackIconMaterialDesign Kind="Settings" Name="ClickGuiMenuTitle_Setting"
                                                  Foreground="#A1A1A1A1"
                                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                                  Margin="0,0,12,0" Height="14"/>
            </Grid>

            <StackPanel>
                <Button Name="SystemButton"
                        Style="{DynamicResource ButtonStyle}"
                        PreviewMouseDown="SystemButton_Click"
                        Margin="0,37,0,0">
                    <WrapPanel Name="SystemWrapPanel"
                               HorizontalAlignment="Left"
                               Width="220">
                        <iconPacks:PackIconFontAwesome Kind="WindowsBrands" Name="SystemIcon"
                                                       Foreground="#FFA2A2A2"
                                                       Height="13" Margin="12,0,0,0"
                                                       VerticalAlignment="Center"/>
                        <TextBlock Name="SystemText"
                                   Text="System" FontSize="13"
                                   Foreground="#FFA2A2A2"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="5,0,0,0"/>
                        <iconPacks:PackIconVaadinIcons Kind="AngleRight" Name="SystemArrow"
                                                       Foreground="#A1A1A1A1"
                                                       VerticalAlignment="Stretch"
                                                       Height="8" Margin="115,0,0,0"/>
                    </WrapPanel>
                </Button>
                <Button Name="DisplayButton"
                        Style="{DynamicResource ButtonStyle}"
                        PreviewMouseDown="DisplayButton_Click"
                        Margin="0,0,0,0">
                    <WrapPanel Name="DisplayWrapPanel"
                               HorizontalAlignment="Left"
                               Width="220">
                        <iconPacks:PackIconBootstrapIcons Kind="Display" Name="DisplayIcon"
                                                          Foreground="#FFA2A2A2"
                                                          Height="13" Margin="12,0,0,0"
                                                          VerticalAlignment="Center"/>
                        <TextBlock Name="DisplayText"
                                   Text="Display" FontSize="13"
                                   Foreground="#FFA2A2A2"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="5,0,0,0"/>
                        <iconPacks:PackIconVaadinIcons Kind="AngleRight" Name="DisplayArrow"
                                                       Foreground="#A1A1A1A1"
                                                       VerticalAlignment="Stretch"
                                                       Height="8" Margin="115,0,0,0"/>
                    </WrapPanel>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Name="ClickGuiSystem"
              Background="Transparent" 
              Height="505" Width="220"
              HorizontalAlignment="Left" VerticalAlignment="Top"
              Margin="400,100,0,0">
            <Border Name="ClickGuiSystemBorder"
                    Background="#FF141414" BorderBrush="Transparent"
                    CornerRadius="5">
            </Border>

            <Grid Name="ClickGuiSystemTitle"
                  Height="34"
                  Margin="0,3,0,0"
                  Background="#FF141414"
                  VerticalAlignment="Top">
            </Grid>
            <Button Name="Module_ShutdownButton"
                        Style="{DynamicResource ButtonStyle}"
                        PreviewMouseDown="Module_ShutdownButton_Click"
                        Margin="0,37,0,0">
                <WrapPanel Name="Module_ShutdownWrapPanel"
                               HorizontalAlignment="Left"
                               Width="220">
                    <TextBlock Name="Module_ShutdownText"
                               Text="Shutdown" FontSize="13"
                               Foreground="#FFA2A2A2"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="5,0,0,0"/>
                </WrapPanel>
            </Button>
            <Button Name="Module_RebootButton"
                        Style="{DynamicResource ButtonStyle}"
                        PreviewMouseDown="Module_RebootButton_Click"
                        Margin="0,37,0,0">
                <WrapPanel Name="Module_RebootWrapPanel"
                               HorizontalAlignment="Left"
                               Width="220">
                    <TextBlock Name="Module_RebootText"
                               Text="Reboot" FontSize="13"
                               Foreground="#FFA2A2A2"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="5,0,0,0"/>
                </WrapPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
